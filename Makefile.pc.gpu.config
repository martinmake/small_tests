# PROJECT DIRS
IDIRS:=inc
SDIR :=src
ODIR :=obj
DDIR :=dep
BDIR :=bin

# PROJECT FILES
ELF  :=$(BDIR)/main.elf
HEX  :=$(BDIR)/main.hex
BIN  :=$(BDIR)/main.bin
ASM  :=$(BDIR)/main.asm

# LIB DIRS
LDIR  :=$(HOME)/Documents/libs/PC
LIDIR :=$(LDIR)/inc
ARCDIR:=$(LDIR)/arc
CUDADIR:=/opt/cuda/targets/x86_64-linux/lib

# LIBS AND DEFS
LIBS:=
DEFS:=

# TOOLCHAIN
CC     :=gcc
CXX    :=g++
ASMC   :=gcc
NVCC   :=nvcc
LD     :=g++
OBJCOPY:=objcopy
OBJDUMP:=objdump
SIZE   :=size
STRIP  :=strip

# COMPILER FLAGS
WARNING     :=-Wall -Wextra -pedantic -Wno-write-strings
OPTIMIZATION:=-O3 -Os -fdata-sections -ffunction-sections -fexceptions -s
